    <div class="flex justify-between items-center">
      <Buttons title="Full Stack Engineer" type="decoration" design="default"/>
      <Buttons title="Open To Work" type="decoration" design="available"/>
    </div>
    <div class="w-full flex flex-col gap-4 mt-8 items-center p-2 lg:flex-row-reverse lg:justify-between">
      <!-- Profile Picture -->
