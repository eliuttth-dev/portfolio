---
import Buttons from "./Buttons.astro";
import Toast from "./Toast.astro";
---

<style>
  :root{
    --green-dot: #64C589;
    --dark: #000005;
    --light: #EAECF0;
    --light-gray: #F6F6F6;
    --gray: #A4AAB6;
    --radius-full: 100%;
  }
  body{
    padding: 0 0.5rem !important;
    background-color: var(--light-gray);
  }

  .profile-pic{
    border-radius: var(--radius-full);
    width: 300px;
    height: 300px;
    border: 4px solid var(--light);
  }
  .profile-pic > img {
    width: 100%;
    height: 100%;
    border-radius: var(--radius-full);
  }
  /* PLAIN CSS IS BETTER THAN TAILWIND */
  /*TODO: i should change all explicit coloring with tailwind custom coloring component*/

</style>
<main class="m-auto max-w-[1200px] mt-2 rounded bg-white shadow-md p-4 ">
  <Toast status="success" title="Email copied to clipboard!"/>
