---
interface ToastProps{
id: "success" | "error" | "warn";
}
const {status, title} = Astro.props;
---
<style>
  .animate-toast{
    transform: translateY(-200px);
  }
  .animate-toast.active{
    transform: translateY(0px);
  }
</style>
<section class="w-screen fixed left-0 top-0 z-1 p-4 flex items-center justify-center transition-all ease-out duration-200 animate-toast" id={status}>
  <div class="py-2 px-8 rounded shadow-sm bg-mint-breeze font-bold text-xs text-emerald-glow animate-pulse border border-2-emerald-glow flex items-center gap-4">
    <img src="/check-icon.svg" width="32px"/><p>{title}</p>
  </div>
</section>
<script>

  // Animate Toast - Success Toast
  document.addEventListener("ActiveToast", async (e) => {
    const status = await e.detail.status;
    if(!status) return;

    console.log(status)
    const getToastId = document.getElementById("success")
    getToastId.classList.toggle("active");
    console.log(getToastId.className)
  })
</script>
